<div class="admin-title">
    <h2>Your Published Posts</h2>
</div>
 
<section class="articles">

    <% if (data.length === 0) { %>
        <div class="noPostMessage">
            <p>Nothing published yet, boss! Keep track of all your published post seamlessly here.</p>
        </div>
       <% } else { %>
        <ul class="admin-posts">
  
            <% data.forEach(post => { %>
             
              <li>
                <a href="/post/<%= post._id %>">
                  <%= post.title %> &nearr;
                </a>
                <div class="admin-post-controls">
    
                    <p><% if (post.createdAt === post.updatedAt) { %>
                        Published: <%= post.createdAt.toDateString() %>
                    <% } else { %>
                        Last edited: <%= post.updatedAt.toDateString() %>
                    <% } %>
                     </p>
                  <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
          
                  <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn-delete btn">
                  </form>
          
                </div>
          
              </li>
          
            <% }) %>
        </ul>
       <% } %>
    
</section>
